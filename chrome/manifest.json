{
    "manifest_version": 3,
    "name": "Manga Extractor",
    "short_name": "MEext",
    "version": "1.0.0",
    "description": "Various tools for extracting manga from various site / reader. Currently support NicoDouga, SpeedBnbReader.",
    "icons": {
        "16": "icons/ghost16.png",
        "48": "icons/ghost48.png",
        "128": "icons/ghost128.png"
    },
    "action": {
        "default_title": "Chrome Extension Boilerplate",
        "default_popup": "index.html"
    },
    "permissions": ["activeTab", "scripting", "tabs", "storage"],
    "web_accessible_resources": [
        {
            "resources": [
                "content-script.js",
                "content-script.js.map",
                "handlers/nico-douga.js",
                "handlers/nico-douga.js.map",
                "handlers/speed-binb-reader.js",
                "handlers/speed-binb-reader.js.map",
                "handlers/comic-walker.js",
                "handlers/comic-walker.js.map",
                "handlers/comic-pixiv.js",
                "handlers/comic-pixiv.js.map",
                "handlers/kindle.js",
                "handlers/kindle.js.map"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
